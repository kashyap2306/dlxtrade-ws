{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts.ignore",
    "**/*.test.tsx.ignore",
    "**/*.spec.ts.ignore",
    "**/*.spec.tsx.ignore",
    "**/__tests__/**",
    "**/__mocks__/**",
    "node_modules"
  ]
}